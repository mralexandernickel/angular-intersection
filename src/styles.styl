@require styles

*
  margin: 0
  outline: 0
  padding: 0

html
  height: 100%
  scroll-behavior: smooth

  body
    background-color: $color--primary
    min-height: 100%

.mat-snack-bar-container
  background: $color--black
  border-radius: 0 !important
  color: $color--white

  .mat-simple-snackbar
    font-family: $font-family--default
    font-weight: 300

  .mat-simple-snackbar-action
    color: $color--error
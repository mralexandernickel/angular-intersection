@require variables

a
  cursor: pointer

header
  background-color: $color--primary
  height: 100vh
  text-align: center

  h1
    font-size: 128px

  img
    margin-top: 100px

.dummies
  // background-image: url('/assets/chevron-down.svg')
  // background-position: top center
  // background-repeat: repeat-y
  list-style: none

  li
    margin-bottom: 50vh
    text-align: center

  li.observed
    border: 2px dashed $color--secondary
    color: $color--secondary
    height: 200px // height of the element needs to be smaller than viewport subtracted by the rootMargin
    overflow: hidden
    position: relative

    &.emitted
      background: $color--secondary
      border: none
      color: $color--primary

    h2
      font-size: 24px
      margin-top: 24px

    .index
      bottom: 0
      color: $color--functional-2
      font-size: 128px
      line-height: 1
      position: absolute
      right: 0

.overlay
  bottom: 0
  height: 100vh
  left: 0
  position: fixed
  right: 0
  top: 0
  width: 100vw
  z-index: 99

  &.hidden
    opacity: 0

  div
    border-style: solid
    border-width: 1px
    display: block
    position: absolute

    &::before
      color: $color--white
      display: block
      padding: 0 10px
      position: absolute
      right: 0
      top: 0

    &.future
      border-color: $color--functional-1

      &::before
        background: $color--functional-1
        content: 'future'

    &.past
      border-color: $color--functional-2

      &::before
        background: $color--functional-2
        content: 'past'

    &.present
      border-color: $color--functional-3

      &::before
        background: $color--functional-3
        content: 'present'